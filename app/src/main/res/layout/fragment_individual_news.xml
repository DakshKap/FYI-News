<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.fyinews.fyinewsapp.IndividualNewsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_indv_news"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_no_image" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_indv_news"
                android:layout_marginEnd="@dimen/standard_right_margin"
                android:layout_marginStart="@dimen/standard_left_margin"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/title"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3sp"
                        android:maxLines="1"
                        android:text="Source"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1sp"
                        android:layout_height="15sp"
                        android:layout_marginEnd="3sp"
                        android:layout_marginVertical="2sp"
                        android:background="@color/secondaryTitle" />


                    <TextView
                        android:id="@+id/textViewAuthor"
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:textSize="14sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/title" />

            </LinearLayout>

            <Button
                android:id="@+id/btnOriginalArticle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_width="match_parent"
                android:visibility="visible"

                android:layout_height="wrap_content"
                android:background="@drawable/custom_outline_button"
                android:layout_alignParentBottom="true"
                android:text="Go to original article" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
