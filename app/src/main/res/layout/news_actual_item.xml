<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:layout_marginStart="@dimen/standard_left_margin"
    android:layout_marginEnd="@dimen/standard_right_margin"
    android:weightSum="10"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/newsUrlToImage"
        android:layout_marginTop="15dp"
        android:layout_width="90sp"
        android:layout_height="60sp"
        android:layout_weight="3"
        app:srcCompat="@android:drawable/btn_star" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="7"

        android:orientation="vertical">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/title"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsSourceTopHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTitle"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/newsDateTopHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTitle"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>