<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.fyinews.fyinewsapp.NoInternetFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="281dp"
        android:layout_height="226dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/no_internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="107dp">


        <TextView
            android:id="@+id/textViewSnap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_right_margin"
            android:layout_marginStart="@dimen/standard_left_margin"
            android:text="@string/oh_snap"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewNoInternetConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/standard_right_margin"
            android:layout_marginStart="@dimen/standard_left_margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/no_internet_connection"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonRetryInternet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cutom_retry_button"
            android:layout_gravity="center"
            android:text="Retry"
            android:textColor="@color/secondaryTitle"
            android:textStyle="bold" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
